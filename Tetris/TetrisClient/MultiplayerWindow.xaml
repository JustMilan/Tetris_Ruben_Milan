                    <DropShadowEffect />
                </TextBlock.Effect>
                <Run Language="en-gb" Text="Tetris" />
            </TextBlock>
            <TextBlock
                FontSize="24"
                Foreground="#FF00FFE7"
                HorizontalAlignment="Left"
                Margin="27,272,0,0"
                TextWrapping="Wrap"
                VerticalAlignment="Top"
                x:Name="score">
                <TextBlock.Effect>
                    <DropShadowEffect />
