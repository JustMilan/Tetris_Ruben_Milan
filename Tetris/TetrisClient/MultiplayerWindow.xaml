            Margin="0,10,0,0"
            VerticalAlignment="Top"
            Width="224"
            x:Name="TetrisGridMisc">

            <Grid.Column>2</Grid.Column>
            <TextBlock
                FontSize="72"
                FontWeight="Bold"
                Foreground="#FF00FFE7"
                Height="84"
                HorizontalAlignment="Left"
                Margin="19,305,0,0"
                TextWrapping="Wrap"
                VerticalAlignment="Top"
                Width="193"
                x:Name="TetrisText">
