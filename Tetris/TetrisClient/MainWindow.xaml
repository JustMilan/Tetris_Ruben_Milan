<Window
    Height="450"
    Title="Tetris"
    Width="800"
    mc:Ignorable="d"
    x:Class="TetrisClient.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TetrisClient"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Background="#FFE2E9FF">
    <Grid>
        <Grid Background="Black" x:Name="TetrisGrid" Margin="2,0,0,1" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="250" Height="400" ShowGridLines="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25" />
                <ColumnDefinition Width="25" />
                <ColumnDefinition Width="25" />
                <ColumnDefinition Width="25" />
                <ColumnDefinition Width="25" />
                <ColumnDefinition Width="25" />
                <ColumnDefinition Width="25" />
                <ColumnDefinition Width="25" />
                <ColumnDefinition Width="25" />
                <ColumnDefinition Width="25" />
            </Grid.ColumnDefinitions>
        </Grid>

        <TextBox x:Name="level" HorizontalAlignment="Left" Height="30" Margin="297,133,0,0" Text="level" TextWrapping="Wrap" Width="100" Background="{x:Null}" FontSize="24" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="{x:Null}" IsEnabled="False"/>
        <TextBox x:Name="lines" HorizontalAlignment="Left" Height="30" Margin="297,183,0,0" Text="lines" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Background="{x:Null}" FontSize="24" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="{x:Null}" IsEnabled="False"/>
        <TextBox x:Name="score" HorizontalAlignment="Left" Height="30" Margin="297,233,0,0" Text="score" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Background="{x:Null}" FontSize="24" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="{x:Null}" IsEnabled="False"/>

        <TextBox x:Name="levelTextBox" HorizontalAlignment="Left" Height="30" Margin="422,133,0,0" Text="1" TextWrapping="Wrap" Width="100" Background="{x:Null}" FontSize="24" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="{x:Null}" IsEnabled="False"/>
        <TextBox x:Name="linesTextBox" HorizontalAlignment="Left" Height="30" Margin="422,183,0,0" Text="0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Background="{x:Null}" FontSize="24" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="{x:Null}" IsEnabled="False"/>
        <TextBox x:Name="scoreTextBox" HorizontalAlignment="Left" Height="30" Margin="422,233,0,0" Text="0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Background="{x:Null}" FontSize="24" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="{x:Null}" IsEnabled="False"/>

        <Button x:Name="quitButton" Content="Quit" HorizontalAlignment="Left" Height="31" Margin="297,293,0,0" VerticalAlignment="Top" Width="100" BorderBrush="{x:Null}" Background="#FFCEDAFF"/>
        <Button x:Name="pauseButton" Content="Pause" HorizontalAlignment="Left" Height="31" Margin="422,293,0,0" VerticalAlignment="Top" Width="100" BorderBrush="{x:Null}" Background="#FFCEDAFF" />

        <TextBox x:Name="tetris" HorizontalAlignment="Left" Height="87" Margin="297,329,0,0" Text="tetris" TextWrapping="Wrap" VerticalAlignment="Top" Width="225" BorderBrush="{x:Null}" Background="{x:Null}" FontSize="72" HorizontalContentAlignment="Center" VerticalContentAlignment="Top" IsEnabled="False" FontWeight="Bold" FontStyle="Normal"/>

        <Grid x:Name="NextGrid" HorizontalAlignment="Left" Height="100" Margin="297,33,0,0" VerticalAlignment="Top" Width="100" Background="#FFCEDAFF" >
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25" />
                <ColumnDefinition Width="25" />
                <ColumnDefinition Width="25" />
                <ColumnDefinition Width="25" />
            </Grid.ColumnDefinitions>

            <Grid.Effect>
                <DropShadowEffect/>
            </Grid.Effect>
        </Grid>
        <TextBox x:Name="xText" HorizontalAlignment="Left" Height="30" Margin="581,33,0,0" Text="X:" TextWrapping="Wrap" Width="100" Background="{x:Null}" FontSize="24" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="{x:Null}" IsEnabled="False"/>
        <TextBox x:Name="yText" HorizontalAlignment="Left" Height="30" Margin="581,72,0,0" Text="Y:" TextWrapping="Wrap" Width="100" Background="{x:Null}" FontSize="24" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="{x:Null}" IsEnabled="False"/>
        <TextBox x:Name="yList" HorizontalAlignment="Left" Height="30" Margin="527,118,0,0" Text="YList:" TextWrapping="Wrap" Width="209" Background="{x:Null}" FontSize="24" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="{x:Null}" IsEnabled="False"/>
    </Grid>
</Window>
